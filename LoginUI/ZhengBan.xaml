<Page x:Class="ECL.LoginUI.ZhengBan"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ECL.LoginUI"
      mc:Ignorable="d" 
      d:DesignHeight="200" d:DesignWidth="200"
      Title="正版登录">

    <Grid>
        <TextBox x:Name="Email"  VerticalAlignment="Top" Height="30" Margin="50,125,0,0"/>
        <PasswordBox x:Name="password"  VerticalAlignment="Top" Height="30" Margin="50,160,0,0"/>
        <Label Content="帐号:" HorizontalAlignment="Left" Margin="0,125,0,0" VerticalAlignment="Top" Height="32" Width="45" FontSize="16"/>
        <Label Content="密码:" HorizontalAlignment="Left" Margin="0,160,0,0" VerticalAlignment="Top" Height="32" Width="45" FontSize="16"/>

        <Label Content="Mojang登录:" HorizontalAlignment="Left" VerticalAlignment="Top" Height="33" Width="112" FontSize="16"/>
    </Grid>
</Page>
